<div class="container">	
	<br>
	<br>
		
		<h1> Drink-Dat-Beer! </h1>
		
	<br>

	{{!-- burger list before being eaten --}}
	<div class="row">
		<div class="col-md-4 col-md-offset-1">
			<div class="panel-panel default panel-transparent">
				<ul class="list-group">
				{{#each burgers}}
					{{#unless this.devoured}}
					<li class="list-group-item">
						<div class="input-group">
							<p class="lead"> {{this.burger_name}} </p>
							<span class="input-group-btn">
								<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-primary btn-lg" type="submit"> CHUG IT! </button>
								</form>
							</span>
						</div>
					</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
	</div>


		{{!-- burger list after being eaten --}}
	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<div class="panel-panel default panel-transparent">
				<ul class="list-group">
				{{#each burgers}}
					{{#if this.devoured}}
					<li class="list-group-item">
						<p class="lead">{{this.burger_name}} </p>
					</li>
					{{/if}}
				{{/each}}
				</ul>
			</div>
		</div>
	</div>

	<div class="col-md-10 col-md-offset-1">
		<center>
		<h2> Enter the name of the beer you want to drink & click the Add button. </h2>
		</center>

		{{!-- section to add burgers --}}
		<form class="create-update-form" action="burgers/create" method="POST">

			<div class="form-group">
				<textarea class="form-control input-lg" type="text" name="b_name" rows="3"> </textarea>
			</div>
			<center>
			<button class="btn btn-danger btn-lg" type="submit">Add Beer!</button>
			</center>
		</form>
		<br>
		
	</div>
</div>